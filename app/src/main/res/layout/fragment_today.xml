<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:visibility="visible">

    <Button
        android:id="@+id/logFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Food To Log"
        app:icon="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/ratingbar_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logFood"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOW DO YOU FEEL TODAY?"
            android:fontFamily="@font/quintessential_regular"
            android:textSize="15sp">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/mood_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood"
                android:fontFamily="@font/quintessential_regular"
                android:textSize="30sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">

            </TextView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"

                android:src="@drawable/ex_mark"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

            </ImageView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:rating="3"
                android:numStars="4"
                android:layout_below="@id/mood_text">
            </RatingBar>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/energy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Energy"
                android:fontFamily="@font/quintessential_regular"
                android:textSize="30sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">

            </TextView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"

                android:src="@drawable/ex_mark"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

            </ImageView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:rating="3"
                android:numStars="4"
                android:layout_below="@id/energy_text">
            </RatingBar>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/hunger_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hunger"
                android:fontFamily="@font/quintessential_regular"
                android:textSize="30sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">

            </TextView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"

                android:src="@drawable/ex_mark"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

            </ImageView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:rating="3"
                android:numStars="4"
                android:layout_below="@id/hunger_text">
            </RatingBar>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/focus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus"
                android:fontFamily="@font/quintessential_regular"
                android:textSize="30sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">

            </TextView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"

                android:src="@drawable/ex_mark"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

            </ImageView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:rating="3"
                android:numStars="4"
                android:layout_below="@id/focus_text">
            </RatingBar>
        </RelativeLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>