<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:padding="8dp"
    android:layout_marginHorizontal="12dp"
    >

    <TextView
        android:id="@+id/confirmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Add to Food Log?"
        android:textSize="24sp"

        app:layout_constraintBottom_toTopOf="@id/foodNameTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/confirmImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/confirmImage"
        android:layout_width="111dp"
        android:layout_height="103dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmText"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/foodConfirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add Food"
        app:layout_constraintEnd_toStartOf="@+id/cancelBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodProteinTxt" />

    <TextView
        android:id="@+id/foodNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/confirmImage"
        app:layout_constraintTop_toBottomOf="@+id/confirmText" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/foodConfirmBtn"
        app:layout_constraintTop_toTopOf="@+id/foodConfirmBtn" />



    <TextView
        android:id="@+id/foodCalTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/foodNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTxt" />

    <TextView
        android:id="@+id/foodCarbTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/foodCalTxt"
        app:layout_constraintTop_toBottomOf="@+id/foodCalTxt"
        tools:layout_editor_absoluteX="206dp" />

    <TextView
        android:id="@+id/foodFatTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/foodCarbTxt"
        app:layout_constraintTop_toBottomOf="@+id/foodCarbTxt" />

    <TextView
        android:id="@+id/foodProteinTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/foodFatTxt"
        app:layout_constraintTop_toBottomOf="@+id/foodFatTxt" />





</androidx.constraintlayout.widget.ConstraintLayout>