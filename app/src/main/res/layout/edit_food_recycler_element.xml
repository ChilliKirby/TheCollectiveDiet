<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/editRecDate"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Date"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/blue"/>

    <ImageView
        android:id="@+id/editRecImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editRecDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editRecDate"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/editRecName"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Food Name"
        app:layout_constraintBottom_toTopOf="@+id/editRecServing"
        app:layout_constraintStart_toEndOf="@+id/editRecImage"
        app:layout_constraintTop_toBottomOf="@id/editRecDate" />

    <View
        android:id="@+id/editRecDivider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecImage" />

    <TextView
        android:id="@+id/editRecServing"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Serving Size"
        app:layout_constraintBottom_toTopOf="@+id/editRecDivider"
        app:layout_constraintStart_toStartOf="@+id/editRecName"
        app:layout_constraintTop_toBottomOf="@+id/editRecName" />



</androidx.constraintlayout.widget.ConstraintLayout>