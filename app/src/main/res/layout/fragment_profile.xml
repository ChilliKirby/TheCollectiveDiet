<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="1000dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_pic_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintBottom_toTopOf="@id/profile_name_constraint_layout"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintLeft_toLeftOf="@id/profile_constraint_layout"
            app:layout_constraintRight_toRightOf="@id/profile_constraint_layout"
            app:layout_constraintTop_toTopOf="@id/profile_constraint_layout"
            app:layout_constraintVertical_weight="1"
            app:layout_optimizationLevel="ratio"
            android:background="@drawable/bg_profile"
            android:layout_marginBottom="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/intro_image_1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_launcher_foreground"
                app:civ_border_color="@color/blue"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/purple_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_name_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintBottom_toBottomOf="@id/profile_constraint_layout"
            app:layout_constraintLeft_toLeftOf="@id/profile_constraint_layout"
            app:layout_constraintRight_toRightOf="@id/profile_constraint_layout"
            app:layout_constraintTop_toBottomOf="@id/profile_pic_constraint_layout"
            app:layout_constraintVertical_weight="1"

            >

            <TextView
                android:id="@+id/profile_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bg_profile"
                android:text="NAME:"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

            </TextView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/profile_weight_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/profile_name_textview"
                android:background="@drawable/bg_profile">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WEIGHT:"
                    android:textSize="40sp">

                </TextView>

                <TextView
                    android:id="@+id/profile_weight_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp">

                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/profile_height_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/profile_weight_linearlayout"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bg_profile">


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:text="HEIGHT:">

                </TextView>

                <TextView
                    android:id="@+id/profile_height_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </TextView>

            </androidx.appcompat.widget.LinearLayoutCompat>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>